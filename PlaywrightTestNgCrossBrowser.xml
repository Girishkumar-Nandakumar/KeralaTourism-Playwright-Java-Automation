<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="KeralaTourismSuite">

   <parameter name="browser" value="firefox"/>
   <test name="SmokeTest with firefox">
   <classes>
   <class name="keralaTourismAutomationPlaywrightJava.ResponsiveUITesting"/>
   <class name="keralaTourismAutomationPlaywrightJava.BasicSmokeTesting"/>
   <class name="keralaTourismAutomationPlaywrightJava.E2EUserJourney"/>
   <class name="keralaTourismAutomationPlaywrightJava.FormValidationRefactored"/>
   <class name="keralaTourismAutomationPlaywrightJava.PerformanceTestUsingPageLoadTime"/>
   </classes>
  </test>

 <parameter name="browser" value="chromium"/>
   <test name="SmokeTest with chrome">
   <classes>
   <class name="keralaTourismAutomationPlaywrightJava.ResponsiveUITesting"/>
   <class name="keralaTourismAutomationPlaywrightJava.BasicSmokeTesting"/>
   <class name="keralaTourismAutomationPlaywrightJava.E2EUserJourney"/>
   <class name="keralaTourismAutomationPlaywrightJava.FormValidationRefactored"/>
   <class name="keralaTourismAutomationPlaywrightJava.PerformanceTestUsingPageLoadTime"/>
   </classes>
  </test>
  
   <parameter name="browser" value="webkit"/>
   <test name="SmokeTest with webkit">
   <classes>
   <class name="keralaTourismAutomationPlaywrightJava.ResponsiveUITesting"/>
   <class name="keralaTourismAutomationPlaywrightJava.BasicSmokeTesting"/>
   <class name="keralaTourismAutomationPlaywrightJava.E2EUserJourney"/>
   <class name="keralaTourismAutomationPlaywrightJava.FormValidationRefactored"/>
   <class name="keralaTourismAutomationPlaywrightJava.PerformanceTestUsingPageLoadTime"/>
   </classes>
  </test>
</suite>
